  <body>
    <main>
        <div class="form-content">
            <h1>2</h1>
            <h3>use simple filters on your favorite sites to generate xml documents for your personal rss feeds<br>---</h3>
            <!--
            struct FormWiz1 {
                pub site_url: String,
                pub item_regex: String,
            }
            -->
            <form action="/generate-3" method="post">
                <div class="form-item-readonly">
                    <label for="site_url">Site URL</label>
                    <input type="text" name="site_url" value="{{site_url}}" readonly/>
                </div>

                <div class="form-item-readonly">
                    <label for="items_regex">Item Filter</label>
                    <textarea type="input" id="items_regex" name="items_regex" readonly>{{items_regex}}</textarea>
                </div>

                <div class="items-preview">
                {{#each items_preview}}
                <p>
                  group {{this.[0]}}: {{this.[1]}}
                </p>
                {{/each}}
                </div>

                <div class="form-item">
                <label for="item_title_no">group number for item title*</label>
                <input required type="number" id="item_title_no" name="item_title_no" min="1" max="3">
                </div>

                <div class="form-item">
                <label for="item_url_no">group number for item url</label>
                <input type="number" id="item_url_no" name="item_url_no" min="1" max="3">
                </div>

                <div class="form-item">
                <label for="item_content_no">group number for item content</label>
                <input type="number" id="item_content_no" name="item_content_no" min="1" max="3">
                </div>

                <button type="submit">Next</button>
            </form>
        </div>
    </main>
