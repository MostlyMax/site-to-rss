          <form action="/generate-2" method="post">
              <div class="form-item-readonly">
                  <label for="site_url">Site URL</label>
                  <input type="url" name="site_url" value="{{site_url}}" readonly/>
              </div>

              <div class="site-html">
{{site_html}}
              </div>

              <div class="form-item">
                <p>
                  use the site html to capture items you are interested in <br>
                </p>
                <p>
                  ‚Ä¢ {*} is a wildcard that can count as any string of words <br>
                  ‚Ä¢ {%} will capture a group of words for later use<br>
                </p>
              </div>
              <div class="form-item">
                  <label for="items_regex">Item Filter</label>
                  <textarea required type="input" id="items_regex" name="items_regex" placeholder="e.g. <article><h2 {*}><a href={%}>{%}</a></h2>">{{items_regex}}</textarea>
              </div>

            <button type="submit">Next</button>
          </form>
        </div>
